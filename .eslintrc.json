{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es6": true,
		"jquery": true,
		"commonjs": true
	},
	"extends": ["eslint:recommended"],
	"globals": {
		"gsap": true,
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"babel",
		"prettier"
	],
	"rules": {
		"no-debugger": "off"
	}
}
